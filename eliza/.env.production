# Production Environment Configuration
NODE_ENV=production

# Service Configuration
ELIZA_ENABLED=true
ELIZA_FALLBACK_ENABLED=true
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT=30000
HEALTH_CHECK_INTERVAL=60000
MEMORY_LIMIT=1024
LOG_LEVEL=INFO

# Rate Limiting
API_RATE_LIMIT=60
API_RATE_WINDOW=60000

# Caching
ENABLE_RESPONSE_CACHE=true
CACHE_MAX_AGE=600
CACHE_MAX_SIZE=1000

# Security
ALLOWED_ORIGINS=https://vrm-ai-girlfriend.vercel.app,https://*.vercel.app

# Database (will be configured in Vercel)
# SUPABASE_URL=
# SUPABASE_ANON_KEY=

# AI Models (will be configured in Vercel)
# OPENAI_API_KEY=

# Monitoring
ENABLE_METRICS=true
METRICS_ENDPOINT=/metrics

# Performance
COMPRESSION_LEVEL=6
COMPRESSION_THRESHOLD=1024